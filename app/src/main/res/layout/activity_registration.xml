<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formalshirts3">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Here"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            tools:ignore="NewApi" />
        <TextView
            android:id="@+id/txtFname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" FName : "
            android:layout_below="@id/txtHeader"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edtFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtHeader"
            android:layout_toRightOf="@id/txtFname"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender : "
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:layout_below="@id/edtFname"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/edtFname"
            android:layout_toRightOf="@id/txtGender"
            android:layout_marginTop="23dp">
            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@android:color/white"
                android:textSize="20dp"

                android:layout_marginLeft="78dp"/>
            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID : "
            android:layout_below="@id/rg"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rg"
            android:layout_toRightOf="@id/txtEmail"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/txtContactnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No. : "
            android:textColor="@android:color/white"
            android:layout_below="@id/edtEmail"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edtContactnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtEmail"
            android:layout_toRightOf="@id/txtContactnum"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:maxLength="12"/>
        <TextView
            android:id="@+id/txtCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City : "
            android:textColor="@android:color/white"
            android:layout_below="@id/edtContactnum"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edtCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtContactnum"
            android:layout_toRightOf="@id/txtCity"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="10dp"
            android:inputType="text"/>
        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address : "
            android:textColor="@android:color/white"
            android:layout_below="@id/edtCity"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtCity"
            android:layout_toRightOf="@id/txtAddress"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textColor="@android:color/white"
            android:layout_below="@id/edtAddress"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtAddress"
            android:layout_toRightOf="@id/txtPassword"
            android:layout_marginLeft="59dp"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_below="@id/edtPassword"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="75dp" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_below="@id/edtPassword"
            android:layout_toRightOf="@id/btnRegister"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"/>

    </RelativeLayout>

</ScrollView>
